@using MudBlazor
@using data_sense_blazor.Services
@using data_sense_blazor.Helpers
@inject AppState AppState

@if (Data.Count > 0)
{
    <MudTable Items="Data" Bordered="true" Class="w-fit min-h-max" FixedHeader="true" HorizontalScrollbar="true" Height="60vh" Outlined="true">
        <HeaderContent>
            @foreach (var col in Data[0].Keys)
            {
                <MudTh>@col</MudTh>
            }
        </HeaderContent>
        <RowTemplate Context="row">
            @foreach (var cell in row)
            {
                <MudTd DataLabel="@cell.Key">@cell.Value</MudTd>
            }
        </RowTemplate>
    </MudTable>
}

@code {
    private List<Dictionary<string, object>> Data = new List<Dictionary<string, object>>();

    protected override void OnInitialized()
    {
        AppState.OnQueryResultChange += UpdateData;
        UpdateData();
    }

    private void UpdateData()
    {
        if (AppState.QueryResult.Rows.Count > 0)
        {
            Data = DataTableHelper.ConvertDataTable(AppState.QueryResult);
        }
        else
        {
            Data = new List<Dictionary<string, object>>();
        }

        StateHasChanged();
    }

    public void Dispose()
    {
        AppState.OnQueryResultChange -= UpdateData;
    }
}
